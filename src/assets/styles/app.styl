html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  font-family 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  font-size 14px
  font-weight 300
  color #333333

blockquote, body, button, dd, div, dl, dt, form, h1, h2, h3, h4, h5, h6, input, li, ol, p, pre, td, textarea, th, ul
  margin 0
  padding 0
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

ul
  display block
  list-style-type disc

li
  list-style none
  text-align -webkit-match-parent
  margin 0
  padding 0
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

dl
  display block

dd
  display block

a
  text-decoration none
  color #333333

  cite
    font-style normal

.bem-nav
  position relative
  padding 0 20px
  background-color #393D49
  color #fff
  border-radius 2px
  font-size 0
  box-sizing border-box

.bem-layout-left
  position absolute !important
  left 200px
  top 0

.bem-layout-right
  position absolute !important
  right 0
  top 0